
<h2 class="text-2xl font-bold text-secondary-300 dark:text-white">
    <%= type === "sign_up" ? 'Sign up' : 'Sign in to your account'%>
</h2>

<div class="mt-5 space-y-6">
    <%= form_with model: user, url: path, local: true do |f| %>
        <% if flash[:notice] %>
            <div class="notice flex p-4 text-sm text-gray-800 rounded-lg bg-gray-50 dark:bg-gray-800 dark:text-gray-300" role="alert">
                <svg aria-hidden="true" class="flex-shrink-0 inline w-5 h-5 mr-3" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"></path></svg>
                <span class="sr-only">Info</span>
                <span class="font-medium"><%= flash[:notice] %></span>
            </div>
        <% end %>
        <% if user.errors.any? %>
            <div class="flex p-4 text-sm text-gray-800 rounded-lg bg-gray-50 dark:bg-gray-800 dark:text-gray-300" role="alert">
                <svg aria-hidden="true" class="flex-shrink-0 inline w-5 h-5 mr-3" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"></path></svg>
                <span class="sr-only">Info</span>
                <ul>
                    <% user.errors.full_messages.each do |message| %>
                        <li class="font-medium"><%= message %></li>
                    <% end %>
                </ul>
            </div>
        <% end %>
        <div>
            <%= f.label :Email, class: "block mb-2 text-sm font-medium text-gray-900 dark:text-white" %>
            <%= f.text_field :email, class: "bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-secondary-300 focus:border-secondary-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-secondary-500 dark:focus:border-secondary-500" %>
        </div>
        <div>
            <%= f.label :Password, class: "block mb-2 text-sm font-medium text-gray-900 dark:text-white"  %>
            <%= f.password_field :password, class:"bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-secondary-300 focus:border-secondary-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-secondary-500 dark:focus:border-secondary-500" %>
        </div>
        <div>
            <%if type === "sign_up"%>
                <div>
                    <%= f.label 'Confirm Password',  class: "block mb-2 text-sm font-medium text-gray-900 dark:text-white" %>
                    <%= f.password_field :password_confirmation, class: "bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-secondary-300 focus:border-secondary-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-secondary-500 dark:focus:border-secondary-500" %>
                </div>
                <%=f.submit 'Create Account', class: "w-full relative mt-5 px-5 py-3 text-base font-medium text-center text-white bg-secondary-300 rounded-full hover:bg-secondary-600 focus:ring-4 focus:ring-secondary-300 sm:w-auto dark:bg-secondary-600 dark:hover:bg-secondary-700 dark:focus:ring-secondary-800"%>

                <div class="mt-2 text-sm font-medium text-gray-500 dark:text-gray-400">
                    Already have an account? <%= link_to 'Sign in', sign_in_path, class:"text-secondary-300 font-bold hover:underline dark:text-secondary-500"%>
                </div>
            <%else%>
                <div class="mt-2 text-sm font-medium text-gray-500 dark:text-gray-400">
                    <%= link_to 'Forgot Password?', forgot_password_path, class:"text-secondary-300 font-bold hover:underline dark:text-secondary-500"%>
                </div>
                <%=f.submit 'Login to your account', class: "w-full relative mt-5 px-5 py-3 text-base font-medium text-center text-white bg-secondary-300 rounded-full hover:bg-secondary-600 focus:ring-4 focus:ring-secondary-300 sm:w-auto dark:bg-secondary-600 dark:hover:bg-secondary-700 dark:focus:ring-secondary-800"%>
                <div class="mt-2 text-sm font-medium text-gray-500 dark:text-gray-400">
                    Don't have an account? <%= link_to 'Sign up', sign_up_path, class:"text-secondary-300 font-bold hover:underline dark:text-secondary-500"%>
                </div>
            <%end%>
        </div>
    <% end %>
</div>
