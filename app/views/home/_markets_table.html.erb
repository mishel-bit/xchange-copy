<table class="min-w-full divide-y divide-gray-200 dark:divide-gray-600">
    <tbody class="">
        <% stocks.each do | stock | %>
            <tr class="text-sm font-normal text-gray-900 dark:text-white">
                <td class="flex justify-baseline items-center align-center gap-2">
                    <%= image_tag logo(stock.symbol).url, class:"w-5 h-5" %>
                    <span class="font-bold text-m"><%= stock.symbol %></span>
                </td>
                <td class="text-right">$<%= stock.latest_price %></td>
                <td class="text-right <%= color(stock.change_percent_s.first) %>"><%= stock.change_percent_s%></td>
            <tr>
        <% end %>
    </tbody>
</table>