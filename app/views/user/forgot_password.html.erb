<div class="flex h-screen overflow-hidden justify-between dark:bg-gray-900">
    <div class="flex flex-col items-center align-items justify-center mx-auto">
        <a href="">
            <h1 class="mb-4 text-xl font-bold leading-none text-secondary-300 text-gray-800 md:text-5xl lg:text-4xl dark:text-secondary-500 ">XCHANGE</h1>    
            <h2 class="mb-4 text-xl leading-none tracking-[.25em]  text-gray-800 md:text-5xl lg:text-4xl dark:text-white ">Start trading now<span class="text-secondary-400">.</span></h2>     
        </a>
    </div>
    
    <div class="w-full max-w-xl p-6 space-y-8 sm:p-8 bg-white rounded-tl-[40px] shadow dark:bg-gray-800">
        <div class="h-screen flex flex-col align-items justify-center mx-auto">
            <h2 class="text-2xl font-bold text-secondary-300 dark:text-white">
              Forgot Password?
            </h2>

            <div class="mt-5 space-y-6">
                <%= form_with model: @user, url: forgot_password_path, local: true do |f| %>
                    <% if @user.errors.any? %>
                        <div class="flex p-4 text-sm text-gray-800 rounded-lg bg-gray-50 dark:bg-gray-800 dark:text-gray-300" role="alert">
                            <svg aria-hidden="true" class="flex-shrink-0 inline w-5 h-5 mr-3" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"></path></svg>
                            <span class="sr-only">Info</span>
                            <ul>
                                <% @user.errors.full_messages.each do |message| %>
                                    <li class="font-medium"><%= message %></li>
                                <% end %>
                            </ul>
                        </div>
                    <% end %>
                    <div>
                        <%= f.label :Email, class: "block mb-2 text-sm font-medium text-gray-900 dark:text-white" %>
                        <%= f.text_field :email, class: "bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-secondary-300 focus:border-secondary-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-secondary-500 dark:focus:border-secondary-500" %>
                    </div>
                 
                    <div>
                        <%= f.submit 'Send Password Reset Email', class: "w-full relative mt-5 px-5 py-3 text-base font-medium text-center text-white bg-secondary-300 rounded-full hover:bg-secondary-600 focus:ring-4 focus:ring-secondary-300 sm:w-auto dark:bg-secondary-600 dark:hover:bg-secondary-700 dark:focus:ring-secondary-800"%>
                    </div>
                <% end %>
            </div>
        </div>
    </div>
</div>
