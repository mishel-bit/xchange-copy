  <ol class="inline-flex items-center space-x-1 md:space-x-3">
    <li class="inline-flex items-center">
      <a href="#" class="inline-flex items-center text-sm font-medium text-gray-700 hover:text-blue-600 dark:text-gray-400 dark:hover:text-white">
        <svg aria-hidden="true" class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path d="M10.707 2.293a1 1 0 00-1.414 0l-7 7a1 1 0 001.414 1.414L4 10.414V17a1 1 0 001 1h2a1 1 0 001-1v-2a1 1 0 011-1h2a1 1 0 011 1v2a1 1 0 001 1h2a1 1 0 001-1v-6.586l.293.293a1 1 0 001.414-1.414l-7-7z"></path></svg>
        <%= link_to "Xchange", root_path %>
      </a>
    </li>
    <li>
      <div class="flex items-center">
        <svg aria-hidden="true" class="w-6 h-6 text-gray-400" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path></svg>
        <%= link_to "My Portfolio", portfolio_path , class:"ml-1 text-sm font-medium text-gray-700 hover:text-blue-600 md:ml-2 dark:text-gray-400 dark:hover:text-white"%>
      </div>
    </li>
    <li aria-current="page">
      <div class="flex items-center">
        <svg aria-hidden="true" class="w-6 h-6 text-gray-400" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path></svg>
        <span class="ml-1 text-sm font-medium text-gray-500 md:ml-2 dark:text-gray-400"><%= @portfolio.company_name%> Transaction Overview</span>
      </div>
    </li>
  </ol>
</nav>

<div class="flex flex-row mt-9 gap-2 px-4 content-center">
    <%= image_tag logo(@portfolio.symbol).url, class:"w-10 h-10" %>
    <div class="font-bold text-3xl"><%= @portfolio.company_name %></div>
    <div class="text-xl py-1 text-gray-400"><%= @portfolio.symbol %></div>
</div>
<% quotes = quotes(@portfolio.symbol) %>
<div class="mt-4 pl-4 text-3xl font-bold">$<%= quotes.latest_price %></div>

<div class="grid grid-cols-5 my-9 px-4">
    <div class="rounded-md drop-shadow-xl w-1/2 p-4 bg-white flex flex-col">
        <%= @portfolio.amount %>
        <span class="text-sm">Current Amount</span>
    </div>
    <div class="rounded-md drop-shadow-xl w-1/2 p-4 bg-white flex flex-col">
        <span>0.0</span>
        <span class="text-sm">Holdings</span>
    </div>
    <div class="rounded-md drop-shadow-xl w-1/2 p-4 bg-white flex flex-col">
        <span>$0.00</span>
        <span class="text-sm">Total Cost</span>
    </div>
    <div class="rounded-md drop-shadow-xl w-1/2 p-4 bg-white flex flex-col">
        <span>$NaN</span>
        <span class="text-sm">Average Net Cost</span>
    </div>
    <div class="rounded-md drop-shadow-xl w-1/2 p-4 bg-white flex flex-col">
        <%= @portfolio.amount %>
        <span class="text-sm">Profit/Loss (-) </span>
    </div>
</div>

<div class="mt-4 mb-4 lg:mb-0">
    <h3 class="p-2 text-2xl text-gray-800 dark:text-secondary-500">
        Transactions
    <h3>
</div>
<table class="min-w-full bg-white divide-y divide-gray-200 dark:divide-gray-600">
    <thead class="bg-gray-100 dark:bg-gray-700">
        <tr class="text-xs text-gray-900 font-medium tracking-wider text-gray-500 uppercase dark:text-white">
            <th scope="col" class="p-4 text-right">Type</th>
            <th scope="col" class="p-4 text-right">Price</th>
            <th scope="col" class="p-4 text-right">Amount</th>
            <th scope="col" class="p-4 text-right">Date</th>
            <th scope="col" class="p-4 text-right">Total Price</th>
        </tr>
    </thead>

    <tbody class="mx-2 my-2 dark:bg-gray-800">
        <%  @transaction.each do | trans | %>
            <tr class="text-sm font-normal text-gray-900 whitespace-nowrap dark:text-white">
                <td class="p-4 text-right"><%= trans.transaction_kind%></td>
                <td class="p-4 text-right">$<%= trans.price%></td>
                <td class="p-4 text-right"><%= trans.amount%></td>
                <td class="p-4 text-right"><%= trans.created_at.strftime("%B %d, %Y  %I:%M %p") %></td>
                <td class="p-4 text-right">$<%= trans.amount * trans.price %></td>
        <% end %>
    </tbody>
</table>