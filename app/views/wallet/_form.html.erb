
<%= form_with model: @wallet, url: deposit_path, local: true do |f| %>
    <% if flash[:notice] %>
        <div class="notice flex p-4 text-sm text-gray-800 rounded-lg bg-gray-50 dark:bg-gray-800 dark:text-gray-300" role="alert">
            <svg aria-hidden="true" class="flex-shrink-0 inline w-5 h-5 mr-3" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"></path></svg>
            <span class="sr-only">Info</span>
            <span class="font-medium"><%= flash[:notice] %></span>
        </div>
    <% end %>
    <h4 class="mb-2 text-xl  tracking-tight text-primary-700 md:text-4xl lg:text-2xl dark:text-white">
        Deposit Money
    </h4>

    <div>
    <%= f.label :Money,  class: "block mb-2 text-sm font-medium text-gray-900 dark:text-white"%>
    <%= f.text_field :money, placeholder: "Money", class: "bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-primary-700 focus:border-primary-700 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-700 dark:focus:border-primary-700" %>
    </div>

    <%=f.submit 'Deposit', class: "w-full mt-5 px-5 py-3 text-base font-medium text-center text-white bg-primary-700 rounded-lg hover:bg-primary-800 focus:ring-4 focus:ring-primary-700 sm:w-auto dark:bg-primary-600 dark:hover:bg-primary-700 dark:focus:ring-primary-800"%>
<% end %>

